---
import SectionContainer from "./SectionContainer.astro";
import Nav from "./Nav.astro";
import ButtonGroup from "./button/ButtonGroup.astro";
import { Icon } from "astro-icon";
import { Image } from "@astrojs/image/components";
import navData from "@/data/navData.json";
---

<header
    id="header"
    class="header fixed left-0 w-full z-30 top-0 bg-white backdrop-filter backdrop-blur-md bg-opacity-50"
>
    <SectionContainer class="header--container wrap wrap-px">
        <div class="header-logo--container">
            <h1 class="logo mb-0">
                <a href="/">
                    <Image
                        src="/nutritrack.svg"
                        alt="logo"
                        class="h-6 w-auto"
                        height={24}
                        aspectRatio={7 / 1}
                        format={"webp"}
                    />
                </a>
            </h1>
        </div>
        <SectionContainer class="flex items-center ml-auto">
            <Nav navItems={navData} />
            <ButtonGroup class="hidden md:block">
                <a
                    role="button"
                    href="https://avenuelabs.lemonsqueezy.com/checkout/buy/df8ccd46-fa63-4384-b2aa-c4c9b8ad3ef0?embed=1"
                    class="btn btn--secondary lemonsqueezy-button ml-4"
                >
                    Get Template
                    <Icon name="mdi:arrow-right" class="w-6" />
                </a>
            </ButtonGroup>
        </SectionContainer>
    </SectionContainer>
</header>
